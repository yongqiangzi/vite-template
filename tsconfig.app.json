{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src", "src/**/*.json", "src/**/*.ts", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules", "build/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "composite": true,
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["vite/client"],
    "moduleResolution": "node",
    "outDir": "./build"
  }
}
